# استفاده از تصویر سبک پایتون
FROM python:3.10-slim

# تنظیم یک دایرکتوری کاری در کانتینر
WORKDIR /app

# نصب ابزارهای موردنیاز برای اجرای OpenCV و دیگر وابستگی‌ها
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    cmake \
    pkg-config \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgl1-mesa-glx \
    libjpeg-dev \
    libpng-dev \
    libtiff-dev \
    libavcodec-dev \
    libavformat-dev \
    libswscale-dev \
    libv4l-dev \
    libxvidcore-dev \
    libx264-dev \
    libatlas-base-dev \
    gfortran \
    && rm -rf /var/lib/apt/lists/*

# نصب نسخه سازگار numpy قبل از نصب OpenCV
RUN pip install --no-cache-dir numpy==1.23.5

# کپی فایل requirements.txt برای نصب وابستگی‌ها
COPY requirements.txt .

# نصب وابستگی‌های پروژه
RUN pip install --no-cache-dir --no-deps -r requirements.txt

# کپی کردن تمام فایل‌های پروژه
COPY . .

# باز کردن پورت پیش‌فرض Flask
EXPOSE 5000

# اجرای اپلیکیشن Flask
CMD ["python", "server.py"]
